<script>
// Check for authentication token on page load
document.addEventListener('DOMContentLoaded', async function() {
    const token = localStorage.getItem('token');
    
    if (token) {
        try {
            // Fetch user info from API
            const response = await fetch('https://localhost:7242/api/user/me', {
                method: 'GET',
                headers: {
                    'Authorization': `Bearer ${token}`,
                    'Content-Type': 'application/json'
                }
            });
            
            if (response.ok) {
                const userData = await response.json();
                
                // Show user menu and hide login/register links
                document.getElementById('loginLink').style.display = 'none';
                document.getElementById('registerLink').style.display = 'none';
                document.getElementById('userMenu').style.display = 'inline-block';
                
                // Display user name
                const userName = userData.name || userData.email || 'User';
                document.getElementById('userName').textContent = `Xin chào, ${userName}`;
                
            } else {
                // Token is invalid, remove it
                localStorage.removeItem('token');
                localStorage.removeItem('userInfo');
            }
        } catch (error) {
            console.error('Error fetching user info:', error);
            // On error, remove invalid token
            localStorage.removeItem('token');
            localStorage.removeItem('userInfo');
        }
    }
});

// Logout function
function logout() {
    localStorage.removeItem('token');
    localStorage.removeItem('userInfo');
    window.location.href = '/trang-chu';
}
</script>
